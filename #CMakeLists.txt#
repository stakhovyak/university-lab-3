cmake_minimum_required(VERSION 3.5)
project(s-linked-list)

set(CMAKE_CXX_STANDARD 17)

add_executable(s-linked-list main.cpp node.cpp linked-list.cpp)

# Include directories for header files
include_directories(include)

# Add header files to the project
set(HEADER_FILES include/node.h include/node-list.h)
target_include_directories(s-linked-list PRIVATE
  ${CMAKE_CURRENT_SOURCE_DIR}/include)
target_sources(s-linked-list PRIVATE ${HEADER_FILES})

# Add input.txt
configure_file(${CMAKE_CURRENT_SOURCE_DIR}/input.txt
  ${CMAKE_CURRENT_BINARY_DIR} COPYONLY)
